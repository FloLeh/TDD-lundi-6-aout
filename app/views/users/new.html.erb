<center>
  <div class="text-center mb-4">
    <h1 class="h3 mb-3 font-weight-normal">Créer un profil</h1>
  </div>
  <%= form_for @post,url: {action: "create"}, html: {class: "form-signin w-25"} do |f| %>
    Prénom :
    <%= f.text_field :first_name, class: "form-control", placeholder: "MyFirstName" %>
    <br /> <br />
    Nom :
    <%= f.text_field :last_name, class: "form-control", placeholder: "MyLastName" %>
    <br /> <br />
    Email :
    <%= f.email_field :email, class: "form-control", placeholder: "something@heyah.com" %>
    <br /> <br />
    Mot de passe :
    <%= f.password_field :password, class: "form-control", placeholder: "Mypass" %>
    <small>Min. 6 caractères</small>
    <br /> <br />
    Confirmer le mot de passe :
    <%= f.password_field :password_confirmation, class: "form-control", placeholder: "Confirm" %>
    <br /> <br />
    <%= f.submit "Créer", class: "btn btn-lg btn-primary btn-block" %>
    <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <% end %>
</center>
